                    <div class="table-responsive">
                        <table id="example" class="table table-striped table-bordered first dataTable" style="width:100%">
                            <thead>
                            <tr>
                                <th>Event</th>
                                <th>Reservation Date</th>
                                <th>Nombre de places</th>
                                <th>Etat</th>
                                <th>Actions</th>


                            </tr>
                            </thead>
                            <tbody>




                            {% for r in reservations %}
                                {% if app.user.id == r.id %}
                                <tr>
                                    <td>{{ r.nom }}</td>
                                    <td>{{ r.date |date("m/d/Y") }}</td>
                                    <td>{{ r.nbr }} </td>
                                    <td><i>{{ r.etat }}</i></td>

                                    <td>
                                        {% if r.etat == "en cours" %}
                                    <div class="btn-group btn-group-sm btn-group-horizontal">
                                        <a class="btn btn-secondary"

                                           href="{{ path('Annuler_reservation', { 'id': r.rid }) }}"

                                           data-toggle="tooltip" title="Annuler">
                                            <i>Annuler</i>
                                        </a>
                                    </div>
                                            {% endif %}
                                    </td>
                                    {# <td style="width: 60px; padding:0px; text-align: center">
                                         {% if p.photo != '' %}
                                             <img alt="Livre Pic" style="width:150px;"
