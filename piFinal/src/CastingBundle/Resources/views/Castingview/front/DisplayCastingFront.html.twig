                        {% if app.user %}
                            {% set var = 'false' %}
                            {% set resultat = 'en cours' %}
                            {% set tableau = participation %}

                            {% for p in tableau %}
{#                                {{ app.user.id }} = {{  p.id }}  ; {{ d.id }} = {{ p.cid }}#}
                                {% if app.user.id==p.id and d.id==p.cid %}
                                    {% set var = 'true' %}
                                    {% set participation = p.pid %}
                                    {% set resultat = p.resultat %}
                                {% endif %}
                            {% endfor %}

