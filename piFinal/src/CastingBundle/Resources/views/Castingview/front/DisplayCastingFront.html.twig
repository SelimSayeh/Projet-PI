                            {% if resultat == 'en cours' %}
                        <a href="{{ path('annuler_participation', { 'id': participation }) }}" class="read-more">annuler participation</a>
                            {% else %}
                             Resultat :   {{ resultat }}
                            {% endif %}
                        {% else %}
                            <a href="{{ path('participer', { 'id': d.id }) }}" class="read-more">Participer</a>
