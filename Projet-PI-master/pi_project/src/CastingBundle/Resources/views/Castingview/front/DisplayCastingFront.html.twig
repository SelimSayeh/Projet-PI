                            <h4 class="post-headline">{{ d.nomCasting }}</h4>
                        </a>
                        <p>Type : {{ d.typeCasting }}<br> number of places : {{ d.numberPlaceCasting }}</p>
                        {% if app.user %}
                            {% set var = 'false' %}

                            {% for p in participation %}
                                {% if app.user.id==p.id and d.id==p.cid %}
                                    {% set var = 'true' %}
                                    {% set participation = p.pid %}
                                {% endif %}
                            {% endfor %}
                        {% if var == 'true' %}
                        <a href="{{ path('annuler_participation', { 'id': participation }) }}" class="read-more">annuler participation</a>
                        {% else %}
                            <a href="{{ path('participer', { 'id': d.id }) }}" class="read-more">Participer</a>
                        {% endif %}
                        {% endif %}
